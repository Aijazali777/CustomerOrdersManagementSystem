
@using (Html.BeginForm("ClickLogin", "Customers", FormMethod.Post))
{
    <div class="custom-form">
        @(Html.DevExtreme().Form<DevExtremeAspNetCoreAppDemo1.Models.Customer>()
                .LabelLocation(FormLabelLocation.Top)
                .Items(items =>
                {
                items.AddSimple().CssClass("custom-headerlabel")
               .Template(@<text>
                       <div>Login</div>
                    </text>);

                items.AddSimpleFor(m => m.Name).CssClass("custom-input").Editor(m => m.TextBox().ShowClearButton(true)).IsRequired(true);

                items.AddSimpleFor(m => m.Password).CssClass("custom-input").Editor(m => m.TextBox().Mode(TextBoxMode.Password).ShowClearButton(true)).IsRequired(true);

                items.AddButton().CssClass("custom-button").HorizontalAlignment(HorizontalAlignment.Center).ButtonOptions(options => options.Text("Login").Type(ButtonType.Default).UseSubmitBehavior(true));

                if ((bool)ViewBag.LoginMessage)
                {
                    items.AddSimple()
                        .Template(@<text>
                                <div style="text-align: center; color:red;"> Incorrect name or password</div>
                                </text>);
                        }

                        items.AddSimple()
                   .Template(@<text>
                                <div style="text-align: center">
                                    Not registered? <a asp-controller="customers" asp-action="signup">Click here to register!</a><br />
                                    <a asp-controller="customers" asp-action="adminlogin">Login as admin</a>
                                </div>
                    </text>);
                    })
        )
    </div>
}
